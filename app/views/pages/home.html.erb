

<!-- background image -->
<div class="welcome-section">
  <div class="welcome-image">
    <%= cl_image_tag("https://res.cloudinary.com/dnmgsdi4z/image/upload/v1610045220/HITC_fn9pbp.gif", :crop => :fill) %>
  </div>
  <div class="first-section">
  </div>
  <!-- div intermédiaire -->
  <div class="second-section">
    <div class="quote">“Storytelling is the most powerful way to put ideas into the world today.” <br><br>
    Robert McKee, Author</div>
  </div>
</div>


<!-- About -->
<div class="about">
  <div class="container">
    <div class="section-part" data-ix="scroll-appear">
      <div data-scroll="0.6" class="section-intro">
        <div class="category" id="about">ABOUT</div>
          <div class="lines">
            <div class="line">
            </div>
          </div>
        </div>
      </div>

      <div class="intro">
        <!-- ID-picture -->
        <div class="intro-id">
            <%= cl_image_tag("https://res.cloudinary.com/dnmgsdi4z/image/upload/v1610368092/id_mkrmeo.png", :crop => :fill, :gravity=>"face") %>
        </div>
        <!-- intro-description -->
        <div class="intro-desc">

          <div class="main-text main-text--offset">
            <div class="main-text-text left-aligned">Sovana, Web Developer <br>& Retail Marketing specialist</div>
            <div class="main-text-line left-aligned"></div>
          </div>
          <div class="p-text">
            <span class="text">
              Hello, I'm Sovana!
              After more than 10 years of experience as a retail marketing & merchandising specialist for various companies in the cosmetics industry, I decided to broaden my skills to the digital world by attending Le Wagon bootcamp in January 2020, a 9-week full-time intensive bootcamp learning the fundamentals of coding and designing my very first apps.
              Based in Paris, I stay open to any new and exciting project in web development and in retail design.
            </span>
          </div>

          <div class="skills">
            <span class="text-skills">
              <b> Technical skills: </b> ruby, ruby on rails, html, css3, vanilla js, bootstrap, github, wordpress, illustrator, sketchup, photoshop
            </span>
          </div>

        </div>
      </div>
    </div>
  </div>

</div>
  <!-- Portfolio -->
<div class="portfolio" id="portfolio">
  <div class="container">
  <div class="section-part" data-ix="scroll-appear">
    <div data-scroll="0.6" class="section-intro">
      <div class="category">PORTFOLIO</div>
      <div class="lines">
        <div class="line">
        </div>
      </div>
      <div class="intro-text-portfolio">
        A selection of my work as a marketing specialist and as a web developer
      </div>
      <!-- app/views/articles/index.html.erb -->
      <div class="section">
        <div class="portfolio-cards">
          <% @projects.each do |project| %>
            <div class="portfolio-card">
              <%= link_to project.url, target: "_blank" do %>
                <div class="portfolio-img">
                  <%= cl_image_tag project.photo.key, width: 648, crop: :fit %>
                </div>
                <div class="portfolio-intro">
                  <div class="project-name"><%= project.name %></div>
                  <div class="project-type"><%= project.project_type %></div>
                  <div class="project-description"><%= project.description %></div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
</div>
  </div>
</div>
</div>


  <!-- Contact -->
<div class="contact" id="contact">
  <div class="container">
  <div class="section-part" data-ix="scroll-appear">
    <div  data-scroll="0.6" class="section-intro">
      <div class="category">CONTACT</div>
      <div class="lines">
        <div class="line-white">
        </div>
      </div>
      <a class="social-zoom" target="_blank" href="mailto:sovana.romano@gmail.com">
        <i class="far fa-envelope fa-lg"> </i>
        Send me a message
      </a>
      </div>
    </div>

  </div>
</div>
</div>






